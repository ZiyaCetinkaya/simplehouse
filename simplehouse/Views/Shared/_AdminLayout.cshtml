<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/Content/admin_assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admin_assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/css/all.min.css" rel="stylesheet" />
    <title>Simple House - Admin</title>
</head>
<body>
    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <div class="card bg-dark text-light h-100 d-none d-md-block" style="min-height: 640px">
                            <div class="card-body">
                                <div class="text-center">
                                    <img src="~/Content/assets/img/simple-house-logo.png" class="mb-3" />
                                    <h5>Simple House</h5>
                                </div>
                                <hr />
                                <a class="bg-dark text-light d-block py-2" href="/admin">Ana Sayfa</a>
                                <a class="bg-dark text-light d-block py-2" href="/admin/kategoriler">Kategoriler</a>
                                <a class="bg-dark text-light d-block py-2" href="/admin/yiyecekler">Yiyecekler</a>
                                <a class="bg-dark text-light d-block py-2" href="/admin/takim-uyeleri">Takım Üyeleri</a>
                                <a class="bg-dark text-light d-block py-2" href="/admin/iletisim-bilgileri">İletişim Bilgileri</a>
                                <a class="bg-dark text-light d-block py-2" href="/admin/iletisim-formlari">İletişim Formları</a>
                                <a class="bg-dark text-light d-block py-2" href="/admin/sifre-degistir">Şifre Değiştir</a>
                                <hr />
                                <div class="text-center">
                                    <p>@Session["NAME"] </p>
                                    <a href="/logout" class="btn btn-sm btn-danger px-5">Logout</a>
                                </div>
                            </div>
                        </div>
                        <div class="d-block d-md-none border-bottom border-dark">
                            <div class="row mb-2">
                                <div class="col-6">
                                    <span style="font-size: 24px">Simple House</span>
                                </div>
                                <div class="col-6 text-end">
                                    <button class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                        <i class="fa fa-bars"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="collapse text-start m-0" id="collapseExample">
                                <a class="bg-dark text-light d-block p-2" href="/admin">Ana Sayfa</a>
                                <a class="bg-dark text-light d-block p-2" href="/admin/kategoriler">Kategoriler</a>
                                <a class="bg-dark text-light d-block p-2" href="/admin/yiyecekler">Yiyecekler</a>
                                <a class="bg-dark text-light d-block p-2" href="/admin/takim-uyeleri">Takım Üyeleri</a>
                                <a class="bg-dark text-light d-block p-2" href="/admin/iletisim-bilgileri">İletişim Bilgileri</a>
                                <a class="bg-dark text-light d-block p-2" href="/admin/iletisim-formlari">İletişim Formları</a>
                                <a class="bg-dark text-light d-block p-2" href="/admin/sifre-degistir">Şifre Değiştir</a>
                                <div class="text-center py-2">
                                    <p class="m-0 p-0">@Session["NAME"] </p>
                                    <a href="/logout" class="btn btn-sm btn-danger px-5">Logout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/admin_assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>
