@model List<simplehouse.Models.FAQ>
<div class="tm-container-inner-2 tm-info-section">
    <div class="row">
        <div class="col-12 tm-faq">
            <h2 class="text-center tm-section-title">Sık Sorulan Sorular</h2>
            <p class="text-center">This section comes with Accordion tabs for different questions and answers about Simple House. Thank you.</p>
            <div class="tm-accordion">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <button class="accordion">@(i+1). @Model[i].TITLE</button>
                    <div class="panel">
                        <p>@Model[i].DETAILS</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
