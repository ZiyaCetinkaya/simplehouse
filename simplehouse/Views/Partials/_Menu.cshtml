@model List<simplehouse.Models.CATEGORY>

<div class="tm-paging-links">
    <nav>
        <ul>
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i == 0)
                {
                    <li class="tm-paging-item"><a href="#" class="tm-paging-link active">@Model[i].NAME</a></li>
                }
                else
                {
                    <li class="tm-paging-item"><a href="#" class="tm-paging-link">@Model[i].NAME</a></li>
                }
            }
        </ul>
    </nav>
</div>
<div class="row tm-gallery">
    @for (int i = 0; i < Model.Count; i++)
    {
        if (i == 0)
        {
            <div id="tm-gallery-page-@Model[i].NAME.ToLower()" class="tm-gallery-page row">
                @Html.Action("_MenuDetails", "Partials", new { id = Model[i].ID })
            </div>
        }
        else
        {
            <div id="tm-gallery-page-@Model[i].NAME.ToLower()" class="tm-gallery-page row hidden">
                @Html.Action("_MenuDetails", "Partials", new { id = Model[i].ID })
            </div>
        }
    }
</div>
