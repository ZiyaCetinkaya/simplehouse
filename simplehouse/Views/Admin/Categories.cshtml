@model List<simplehouse.Models.CATEGORY>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card content-card">
    <div class="card-header py-3 bg-dark text-light">
        <h5 class="m-0">Kategoriler</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NAME</td>
                            <td>@item.STATE_NAME</td>
                            <td class="text-end">
                                <a href="/admin/kategori-duzenle/@item.ID" class="btn btn-primary px-3 py-0"><i class="fa fa-sm fa-edit"></i></a>
                                <a href="/admin/kategori-sil/@item.ID" class="btn btn-danger px-3 py-0"><i class="fa da-sm fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-dark text-light">
        <div class="text-end">
            <a class="btn btn-outline-light btn-sm" href="/admin/kategori-ekle"><i class="fa fa-plus me-2"></i>Yeni Kategori</a>
        </div>
    </div>
</div>

