@model simplehouse.Models.FAQ
@{
    ViewBag.Title = "SSS Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card content-card">
    <div class="card-header py-3 bg-dark text-light">
        <h5 class="m-0">SSS Düzenle</h5>
    </div>
    <div class="card-body">
        @if (ViewBag.Error != null)
        {
            <div class="bg-danger text-light p-3 mb-2">
                <span>@ViewBag.Error</span>
            </div>
        }
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("UpdateFaq", "Admin", FormMethod.Post))
                {
                    <div class="form-group mb-3">
                        <label>Durum</label>
                        @Html.DropDownList("STATE_ID", null, htmlAttributes: new { @class = "form-select" })
                    </div>
                    <div class="form-group mb-3">
                        <label>Başlık</label>
                        @Html.TextBoxFor(model => model.TITLE, new { @class = "form-control", type = "text", placeholder = "Başlık" })
                    </div>
                    <div class="form-group mb-3">
                        <label>Detay</label>
                        @Html.TextAreaFor(model => model.DETAILS, new { @class = "form-control", type = "text", placeholder = "Detay", rows = "6" })
                    </div>
                    <div class="form-group text-end">
                        @Html.HiddenFor(model => model.ID)
                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save me-2"></i>Kaydet</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="card-footer bg-dark text-light">
        <div class="text-end">
            <a class="btn btn-danger btn-sm" href="/admin/ssss"><i class="fa fa-times me-2"></i>İptal</a>
        </div>
    </div>
</div>

